<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">


    <bean id="actor1" class="com.stackroute.domain.Actor" >
        <constructor-arg index="0" value="lohani" type="java.lang.String"/>
        <constructor-arg index="1" value="male" type="java.lang.String"/>
        <constructor-arg index="2" value="23" type="int"/>
    </bean>

    <bean id="actor2" class="com.stackroute.domain.Actor" >
        <property name="name" value="ranjan"/>
        <property name="gender" value="male"/>
        <property name="age" value="22"/>
    </bean>

    <bean id="actor3" class="com.stackroute.domain.Actor" >
        <property name="name" value="lohani"/>
        <property name="gender" value="male"/>
        <property name="age" value="21"/>
    </bean>

    <bean name="MovieA, MovieB" class="com.stackroute.domain.Movie" scope="singleton" >
        <constructor-arg name="actor" ref="actor1"/>
    </bean>

</beans>